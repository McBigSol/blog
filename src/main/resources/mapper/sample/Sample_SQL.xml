<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="sample" >
    <!-- ポスト一覧取得 -->
	<select id="selectBoardList" parameterType="hashmap" resultType="hashmap">
		<![CDATA[
            SELECT
                p.POST_IDX,
                p.POST_CATEGORY,
                c.CATE_TITLE,
                p.TITLE,
                p.CONTENTS,
                p.DEL_STATUS,
                p.REG_DATE,
                p.WRITER    
            FROM 
                POST p
            INNER JOIN
                CATEGORY_MASTER c
            ON p.POST_CATEGORY = c.CATE_CODE
            WHERE
                p.DEL_STATUS = 'N'
            ORDER BY p.POST_IDX DESC; 
		]]>
    </select>
    <!-- カテゴリリスト取得 -->
    <select id="selectCateList" parameterType="hashmap" resultType="hashmap">
        <![CDATA[
           SELECT
                CATE_CODE,
                CATE_TITLE
           FROM
                CATEGORY_MASTER;
        ]]>
    </select>
    <insert id="insertBoard" parameterType="hashmap">
        <![CDATA[
            INSERT INTO POST
                (
                     POST_CATEGORY
                    ,TITLE
                    ,CONTENTS
                    ,DEL_STATUS
                    ,REG_DATE
                    ,WRITER
                )
                VALUES
                (
                     1
                    ,#{TITLE}
                    ,#{CONTENTS}
                    ,'N'
                    ,SYSDATE()
                    ,0
                );
        ]]>
    </insert>
</mapper>